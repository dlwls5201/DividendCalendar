<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flItemViewCalendarParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider_item_calendar"
    tools:layout_height="100dp"
    tools:layout_width="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItemViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemViewCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00" />

        <LinearLayout
            android:id="@+id/llItemViewCalendarParent1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvItemViewCalendar">

            <ImageView
                android:id="@+id/ivItemViewCalendarLogo1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                tools:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvItemViewCalendarCompanyName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="10dp"
                tools:text="name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llItemViewCalendarParent2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llItemViewCalendarParent1">

            <ImageView
                android:id="@+id/ivItemViewCalendarLogo2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                tools:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvItemViewCalendarCompanyName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="10dp"
                tools:text="name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llItemViewCalendarParent3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llItemViewCalendarParent2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textSize="10dp"
                android:text="more.."
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>